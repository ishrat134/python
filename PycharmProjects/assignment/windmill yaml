version: '3.8'

services:
  windmill:
    image: ghcr.io/windmill-labs/windmill:latest
    restart: unless-stopped
    ports:
      - "8000:8000"
    depends_on:
      - windmill-db
    environment:
      DATABASE_URL: "postgres://postgres:windmill@windmill-db/windmill"
      BASE_URL: "http://localhost:8000"
      SECRET: "your-secret-change-me-32-chars"  # ðŸ‘ˆ Explained below

  windmill-db:
    image: postgres:15-alpine
    restart: unless-stopped
    environment:
      POSTGRES_PASSWORD: "windmill"
      POSTGRES_DB: "windmill"
    volumes:
      - windmill_db_data:/var/lib/postgresql/data

volumes:
  windmill_db_data:
